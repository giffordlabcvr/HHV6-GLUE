project hhv

  # load project settings
  run file glue/core/projectSettings.glue

  # create modules
  run file glue/core/hhvModules.glue

  # Import NCBI reference sequences 
  import source sources/ncbi-refseqs
 
  # Import data 
  run file glue/core/hhvLoadVirusData.glue

  # Define genome features
  run file glue/core/hhvFeatures.glue

  # Declare reference sequences
  run file glue/core/hhvReferences.glue

  # Add feature locations to reference sequences
  module featureLocationTextToGlue transform tabular/references/reference_feature_locations.tsv -r

  # Import alignments and build constrained alignment tree
  run file glue/core/hhvAlignments.glue
  run file glue/core/hhvAlignmentTree.glue

  # Validate
  validate

  exit
